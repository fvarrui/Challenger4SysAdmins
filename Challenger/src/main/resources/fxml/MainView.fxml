<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ListView?>

<BorderPane fx:id="root" prefHeight="480.0" prefWidth="640.0" styleClass="background" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<BorderPane BorderPane.alignment="CENTER">
			<center>
				<Label fx:id="titleLabel" styleClass="title" text="Título del reto" BorderPane.alignment="CENTER_LEFT" />
			</center>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</BorderPane.margin>
			<right>
				<HBox spacing="5.0" BorderPane.alignment="CENTER">
					<children>
						<JFXButton fx:id="startButton" contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" onAction="#onStartAction" ripplerFill="BLACK">
							<tooltip>
								<Tooltip text="Iniciar reto" />
							</tooltip>
							<graphic>
								<FontAwesomeIconView glyphName="PLAY" size="24" />
							</graphic>
						</JFXButton>
						<JFXButton fx:id="pauseButton" contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" onAction="#onPauseAction" ripplerFill="BLACK">
							<tooltip>
								<Tooltip text="Pausar reto" />
							</tooltip>
							<graphic>
								<FontAwesomeIconView glyphName="PAUSE" size="24" />
							</graphic>
						</JFXButton>
						<JFXButton fx:id="restartButton" contentDisplay="GRAPHIC_ONLY" layoutX="50.0" layoutY="10.0" onAction="#onRestartAction" ripplerFill="BLACK">
							<tooltip>
								<Tooltip text="Reiniciar reto" />
							</tooltip>
							<graphic>
								<FontAwesomeIconView glyphName="REFRESH" size="24" />
							</graphic>
						</JFXButton>
						<JFXButton fx:id="openButton" contentDisplay="GRAPHIC_ONLY" onAction="#onOpenAction" ripplerFill="BLACK">
							<tooltip>
								<Tooltip text="Cargar un reto" />
							</tooltip>
							<graphic>
								<FontAwesomeIconView glyphName="FOLDER_OPEN" size="24" />
							</graphic>
						</JFXButton>
						<JFXButton fx:id="settingsButton" contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" onMouseClicked="#onSettingsClicked" ripplerFill="BLACK">
							<tooltip>
								<Tooltip text="Configuración" />
							</tooltip>
							<graphic>
								<FontAwesomeIconView glyphName="GEAR" size="24" />
							</graphic>
						</JFXButton>
					</children>
				</HBox>
			</right>
		</BorderPane>
	</top>
	<center>
		<TabPane fx:id="tabPane" BorderPane.alignment="CENTER">
			<tabs>
				<Tab fx:id="challengeTab" text="Reto" closable="false">
					<content>
						<WebView fx:id="challengeView" />
					</content>
				</Tab>
				<Tab fx:id="goalsTab" text="Objetivos" closable="false">
					<content>
						<SplitPane dividerPositions="0.35">
							<items>
								<ListView fx:id="goalsList" />
								<WebView fx:id="goalView" />
							</items>
						</SplitPane>
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</center>
</BorderPane>
